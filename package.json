{
  "name": "server-api",
  "version": "1.0.0",
  "main": "./index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tsc": "tsc",
    "build:tsc": "npm run tsc && ts-add-js-extension --dir=./typescript-api/build",
    "dev": "nodemon ./index.js",
    "container:init": "nodemon ./index.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Guillermo Lillo LÃ³pez",
  "license": "ISC",
  "description": "Proyectos de prueba para empezar con node y proyecto 'final' de typescript, con guardado de datos de usrs y peliculas en BD mysql y generador de archivos csv",
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.7",
    "@types/pdfkit": "0.13.8",
    "@types/supertest": "6.0.2",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "supertest": "7.0.0",
    "ts-add-js-extension": "1.6.5",
    "ts-jest": "29.2.5",
    "ts-standard": "12.0.2",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@root/async-router": "1.0.14",
    "cors": "2.8.5",
    "express": "^4.21.2",
    "fast-csv": "5.0.2",
    "mysql2": "3.12.0",
    "pdfkit": "0.16.0",
    "pdfkit-table": "0.1.99",
    "ts-to-zod": "3.15.0",
    "zod": "3.24.1"
  },
  "eslintConfig": {
    "rules": {
      "@typescript-eslint/no-extraneous-class": "off",
      "@typescript-eslint/no-unnecessary-boolean-literal-compare": "off"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "node_modules/",
      "typescript-api/build/",
      "typescript-api/tests/"
    ]
  },
  "jest": {
    "verbose": true,
    "silent": true,
    "detectOpenHandles":true,
    "preset": "ts-jest"
  }
}
